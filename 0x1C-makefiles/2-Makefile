# Define variables
CC = gcc
# Find all source files with a .c extension
SRC = $(wildcard.*.c)
# Convert source files to object files
OBJ = $(SRC:.c=.o)
# Name of the final executable
NAME = school
# Target to build the final executable
all: $(NAME)

# Rule to compile all source files into object files
$(OBJ): $(SRC)
  $(CC) -c $< -o $@  # Compile each source file and create corresponding object file

# Rule to link object files into the executable
$(NAME) : $(OBJ)
        $(CC) $(OBJ) -o $(NAME) 
